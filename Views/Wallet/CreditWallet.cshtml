@model Real_Estate.Core.Application.Dto.AddToWalletRequestModel

<div>
    <h2><i>Credit Wallet</i></h2>
</div>

<div class="row">
    <div class="col-md-2"></div>
    <div class="row col-md-10 pt-3">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <span class="text-center">
                <h3>@ViewData["Title"]</h3>
            </span>

            <form asp-action="CreditWallet">
                <div class="profile">
                    <label asp-for="Amount">Amount</label>
                    <input class="form-control" type="text" asp-for="Amount">
                    <span asp-validation-for="Amount"></span>
                </div>
                <div>
                    <input type="submit" value="Credit wallet" class="btn btn-primary" />
                </div>
                <li>
                    <a asp-controller="User" asp-action="Customer" class="btn btn-secondary">Back</a>
                </li>
            </form>

        </div>
        <div class="col-md-3"></div>
    </div>
</div>

<style>
    h2 {
        font-style: italic;
    }

    .profile {
        margin: 10px 0;
    }

    label {
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .text-danger {
        color: red;
    }

    .btn-primary,
    .btn-secondary {
        color: #fff;
        cursor: pointer;
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
    }

    .btn-primary {
        background-color: #007bff;
    }

    .btn-secondary {
        background-color: #6c757d;
    }
    
    .btn-primary:hover,
    .btn-secondary:hover {
        opacity: 0.8;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}