@model Real_Estate.Core.Application.Dto.LoginRequestModel
<body>

    <style>
        body {
            background-repeat: no-repeat;
            background-size: cover;
            background-image: url("https://www.livebuyers.com/wp-content/uploads/2020/02/Los-Angeles-CA.jpg");
    
            text-align: center;
        }

        .log {
            margin: 15% auto;
            max-width: 400px;
            padding: 20px;
            background: white;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color:rgb(122, 240, 169);
            
        }

        .log p {
            font-size: 24px;
        }

        .log label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .log input {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        .log .text-danger {
            color: red;
        }

        .log input[type="submit"] {
            background-color: #007bff;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

        .log a {
            text-decoration: none;
        }
    </style>
    <div class="log">
        <p><b><i>Use this Form To Login</i></b></p>
        <div>@TempData["message"]</div>
        <form asp-action="Login">
            <div class="form-control">
                <div class="log">
                    <label asp-for="Email"></label>
                    <input type="email" asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="log">
                    <label asp-for="Password"></label>
                    <input type="password" asp-for="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div>
                    <input class="btn btn-primary" type="submit" value="Submit" />
                </div>
            </div>
        </form>

    </div>
</body>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
