@model IEnumerable<Real_Estate.Core.Application.Dto.ManagerDto>

<div class="manager-list">
    <a class="dropdown-item active" asp-action="Manager" asp-controller="User">Dashboard</a>
    <a class="dropdown-item" asp-action="List" asp-controller="Manager">Manager-List</a>

    <table class="table table-active table-bordered table-responsive table-striped">
        <thead>
            <tr>
                <th>S/N</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.StaffNumber)</th>
                <th>@Html.DisplayNameFor(model => model.FullName)</th>
                <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                <th>Details</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @{
                int a = 1;
                foreach (var manager in Model)
                {
                    <tr>
                        <td>@a</td>
                        <td>@Html.DisplayFor(modelItem => manager.Email)</td>
                        <td>@Html.DisplayFor(modelItem => manager.StaffNumber)</td>
                        <td>@Html.DisplayFor(modelItem => manager.FullName)</td>
                        <td>@Html.DisplayFor(modelItem => manager.PhoneNumber)</td>
                        <td>
                            <a asp-controller="manager" asp-action="Get" asp-route-staffNumber="@manager.StaffNumber">Details</a>
                        </td>
                        <td>
                            <a asp-controller="manager" asp-action="Delete" asp-route-id="@manager.Id">Delete</a>
                        </td>
                    </tr>
                   {
                    a++;
                    }
                }
            }
        </tbody>
    </table>
                <li>
                    <a asp-controller="User" text asp-action="Admin">Home</a>
                </li>
</div>

<style>
    
    .manager-list {
        margin: 20px;
          background-repeat: no-repeat;
            background-size: cover;
            background-image: url("https://wallpapers.com/images/high/real-estate-mutual-funds-sq9sx7325iizxu7f.webp");
    }

    .manager-list table {
        @* background-color: #f5f5f5; *@
        @* border: 1px solid #ddd; *@
        border-radius: 5px;
    }

    .manager-list th, .manager-list td {
        padding: 10px;
    }

    .manager-list th {
        background-color: #333;
        color: #fff;
    }
    .manager-list td {
        
        color: rgba(0, 0, 255, 0.594);
        font-size: 18px;
        font-weight: 600;
    }

    .manager-list a {
        text-decoration: none;
        color: #007bff;
        cursor: pointer;
    }
</style>
