@model Real_Estate.Core.Application.Dto.ManagerDto
<div class="delete-manager">
    <p>Are you sure you want to delete this Manager?</p>
    <ul class="delete-manager-options">
        <li>
            <form asp-action="Delete">
                <input class="btn btn-danger" type="submit" value="Yes" />
            </form>
        </li>
        <li>
            <a class="btn btn-secondary" asp-controller="Manager" asp-action="List">No</a>
        </li>
    </ul>
</div>

<style>
    .delete-manager {
        text-align: center;
        margin: 20px;
          background-repeat: no-repeat;
            background-size: cover;
            background-image: url("https://wallpapers.com/images/high/real-estate-mutual-funds-sq9sx7325iizxu7f.webp");
    }

    .delete-manager p {
        font-size: 18px;
    }

    .delete-manager-options {
        list-style-type: none;
        padding: 0;
        display: flex;
        justify-content: center;
    }

    .delete-manager-options li {
        margin: 0 10px;
    }
</style>
